{{ 'image-carousel.css' | asset_url | stylesheet_tag }}

{% assign count = 0 %}

<div class="image__block-wrapper">
  <div class="thumbnail__gallery-wrapper">
    <div class="thumbnail__inside-wrapper">
      {%- for image in product.images -%}

        <div class="thumbnail-item">
          <img src="{{ image.src | img_url: '900x900' }}"/>
        </div>
      {%- endfor -%}

    </div>
  </div>
  <div id="carouselExampleControls" class="carousel slide carousel-wrapper">
    <div class="carousel-inner">

      {%- for image in product.images -%}

        {% if count == 0 %}
          {%- assign carouselClass = "carousel-item active" -%}
        {% else %}
          {%- assign carouselClass = "carousel-item" -%}
        {% endif %}

        <div class="{{carouselClass}}">
          <img class="d-block w-100" data-bs-ride="carousel" src="{{ image.src | img_url: '900x900' }}">
        </div>

        {% assign count = count | plus:1 %}

      {%- endfor -%}

    </div>
    <div class="button__wrapper">
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true">
          <i class="fa-solid fa-angle-left"></i>
        </span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true">
          <i class="fa-solid fa-angle-right"></i>
        </span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>